{
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "/usr/bin/g++",
			"args": [
				"-pipe",
				"-fsanitize=signed-integer-overflow,undefined",
				"-g",
				"-march=native",
				// "-O2", This optimization causes errors while Debugging
				"-std=c++23",
				"-Wall",
				"-Wshadow",
				"-Wno-unused-result",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
		}
	],
	"version": "2.0.0"
}
